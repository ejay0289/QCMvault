<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="15dp">

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/blue"
        android:fontFamily="@font/Ysbeau"
        android:textSize="40sp"
        android:layout_marginBottom="15dp"
        android:text="QCMvault"
    />
    
    <TextView
        android:layout_gravity="start"
        android:text="Connectez-vous"
        android:textSize="15sp"
        
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
   

    <EditText
        android:id="@+id/loginEmail"
        android:background="@drawable/custom_edit_text"
        android:paddingHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableStart="@drawable/reactive_email_icon"
        android:drawablePadding="12dp"
        android:hint="Email"
        android:layout_marginBottom="15dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/loginPassword"
        android:background="@drawable/custom_edit_text"
        android:layout_height="60dp"
        android:paddingHorizontal="12dp"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/reactive_lock_icon"
        android:drawablePadding="12dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Se connecter"
        android:background="@drawable/logout_button"
        android:layout_marginTop="16dp" 
        android:layout_marginBottom="15dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
    >
        <TextView
            android:text="Vous n'avez pas de Compte?"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
        />
        <TextView
            android:id="@+id/signup_text_clickable"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="S'inscrire"
            android:textColor="#4A96FF" />
    </LinearLayout>
</LinearLayout>


