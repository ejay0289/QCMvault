<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/LinearLayout"
	android:orientation="vertical"
	android:background="@drawable/annee_activity_gradient"
	>
	<TextView
		android:id="@+id/moduleTitle"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Annee"
		android:layout_marginTop="40dp"
		android:layout_gravity="center_horizontal"
		style="@style/text"
		android:padding="10dp"
		android:background="@drawable/white_stroke"
		/>
		
	<LinearLayout
		android:layout_marginTop="25dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="10dp">
		
	<Spinner
		android:id="@+id/sessionspinner"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:background="@drawable/style_spinner1"
		style="@style/text"
		android:maxWidth="32dp"
		
		android:layout_weight="1"
		/>
	<Spinner
		android:layout_marginStart="16dp"
		android:id="@+id/yearspinner"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:maxWidth="32dp"
		android:background="@drawable/style_spinner1"
		/>
	

	</LinearLayout>
		<Button
			android:id="@+id/button1"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="Semiologie"
			android:textColor="#ffffff"
			android:drawablePadding="5dp"
			android:background="@drawable/round_button"	

		/>


		<Button
			android:id="@+id/button2"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:background="@drawable/round_button"
			android:textColor="#ffffff"
			android:text="2em Année"
		/>
	
		<Button
			android:id="@+id/button3"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:background="@drawable/round_button"
			android:textColor="#ffffff"
			android:text="3em Année"
		/>

		<Button
			android:id="@+id/button4"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:background="@drawable/round_button"
			android:textColor="#ffffff"
			android:text="4em Année"
		/>
	
		<Button
			android:id="@+id/button5"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:background="@drawable/round_button"
			android:textColor="#ffffff"
			android:text="5em Année"
		/>

		<Button
			android:id="@+id/button6"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:background="@drawable/round_button"
			android:textColor="#ffffff"
			android:text="6em Année"
        />
		
	
	

	
</LinearLayout>
